#include <16f877a.h>
#fuses HS,NOWDT,NOPROTECT,NOLVP
#use delay(clock=20M)
#FUSES NOWDT, HS, NOPUT, NOPROTECT, NODEBUG, NOBROWNOUT, NOLVP, NOCPD, NOWRT
#use i2c(Master, sda = PIN_C4, scl=PIN_C3)
#use rs232(baud=9600,parity=N,xmit=PIN_C6,rcv=PIN_C7,bits=8)
#define Slave_add 0x68
#define Read 1
#define Write 0

volatile int8 time =0;
volatile int8 time_cout =0;
int8 tt, reset_time;
const unsigned char led_7[10]={0xC0, 0xF9, 0xA4, 0xB0, 0x99, 0x92, 0x82,0xF8, 0x80, 0x90};
void send(int8 a);


// d0 - d6 out
// a0 1 2 3 4
#int_timer1  
void ngat_timer()    // timer 1 say ra khi =65535 tuc tran, khi tran thi dat 100ms
{  
      clear_interrupt(INT_TIMER1);           // khoi tao gia tri ban dau//
      set_timer1(3036);
      time_cout = time_cout+1;

      if(time_cout == 10) 
      {
         time_cout=0; 
         time = time+1;
      }
      if(time == reset_time)
      { 
         time = 0;
      }
      setup_timer_1(T1_INTERNAL|T1_DIV_BY_8);         // mo timer bo chia 8
      enable_interrupts(int_ext);                     // mo ngat ngoai
}

void ban_dem()
{
output_high(pin_a0); // hang chuc
output_high(pin_a1); // hang chuc
output_high(pin_a2); // hang chuc
output_high(pin_a3); // hang chuc

      if(time == 1)
      {
            output_high(pin_b3);
            output_high(pin_b5);
            output_low(pin_b4);   
    
            
            output_high(pin_c5);
            output_high(pin_c7);
            output_low(pin_c6);
      }
      else
            output_high(pin_b3);
            output_high(pin_b5);
            output_high(pin_b4);   
            
            output_high(pin_c5);
            output_high(pin_c7);
            output_high(pin_c6); 
}
void bt()
{
   int8 hc, hdv;
   int8 timer;
   
   if(time >= 0 && time < 20)
   {
      timer = 20 - time;
      output_high(pin_a1); // hang chuc
      output_high(pin_a0); // hang chuc
   
      hc = timer / 10;
      hdv = timer % 10;
      
      output_low(pin_a3); // hang don vi
      output_high(pin_a2); // hang chuc
      output_d(led_7[hdv]);
      delay_ms(5);
      output_low(pin_a2); // hang chuc
      output_high(pin_a3); // hang don vi
      output_d(led_7[hc]);
      delay_ms(5);     
      output_high(pin_a3); // hang don vi
      output_high(pin_a2); // hang don vi 
   }
 
    if(time >= 20 && time < 40)
   {
      timer = 40 - time;
      output_high(pin_a1); // hang chuc
      output_high(pin_a0); // hang chuc
 
      hc = timer / 10;
      hdv = timer % 10;
   
      output_low(pin_a3); // hang don vi
      output_high(pin_a2); // hang chuc
      output_d(led_7[hdv]);
      delay_ms(5);
      output_low(pin_a2); // hang chuc
      output_high(pin_a3); // hang don vi
      output_d(led_7[hc]);
      delay_ms(5);     
      output_high(pin_a3); // hang don vi
      output_high(pin_a2); // hang don vi
   }
   
   if(time >= 0 && time < 20)
   {
      timer = 20 - time;
      hc = timer / 10;
      hdv = timer % 10;
      output_low(pin_a0); // hang don vi
      output_high(pin_a1); // hang chuc
      output_d(led_7[hdv]);
      delay_ms(5);
      output_low(pin_a1); // hang chuc
      output_high(pin_a0); // hang don vi
      output_d(led_7[hc]);
      delay_ms(5);
      
     if(time >= 17 && time < 20)
     {
            output_high(pin_b3);
            output_high(pin_b4);
            output_low(pin_b5);
            
            output_high(pin_c5);
            output_high(pin_c7);
            output_low(pin_c6);
      }
      if(time >= 0 && time < 17)
     {
         output_high(pin_c7);
         output_high(pin_c6);
         output_low(pin_c5);
         
         output_high(pin_b3);
         output_high(pin_b4);
         output_low(pin_b5);
     }
 }
   
   if(time >= 20 && time < 40)
   {
      timer = 40 - time;
      hc = timer / 10;
      hdv = timer % 10;
      
      output_high(pin_a1); // hang don vi
      output_low(pin_a0); // hang don vi
      output_d(led_7[hdv]);
      delay_ms(5);
      output_low(pin_a1); // hang chuc
      output_high(pin_a0); // hang don vi
      output_d(led_7[hc]);
      delay_ms(5);
     
      output_high(pin_c5);
      output_high(pin_c6);
      output_low(pin_c7);
      
    if(time >= 20 && time < 37)
     {
         output_high(pin_b4);
         output_high(pin_b5);
         output_low(pin_b3);
      }
      if(time >= 37 && time < 40)
     {
         output_high(pin_b3);
         output_high(pin_b5);
         output_low(pin_b4);
     }
     
   }
}
 void dd()
{
   int8 hc, hdv;
   int8 timer;
   
   if(time >= 0 && time < 30)
   {
      timer = 30 - time;
      output_high(pin_a1); // hang chuc
      output_high(pin_a0); // hang chuc
   
      hc = timer / 10;
      hdv = timer % 10;
      
      output_low(pin_a3); // hang don vi
      output_high(pin_a2); // hang chuc
      output_d(led_7[hdv]);
      delay_ms(5);
      output_low(pin_a2); // hang chuc
      output_high(pin_a3); // hang don vi
      output_d(led_7[hc]);
      delay_ms(5);     
      output_high(pin_a3); // hang don vi
      output_high(pin_a2); // hang don vi 
   }
 
    if(time >= 30 && time < 60)
   {
      timer = 60 - time;
      output_high(pin_a1); // hang chuc
      output_high(pin_a0); // hang chuc
 
      hc = timer / 10;
      hdv = timer % 10;
   
      output_low(pin_a3); // hang don vi
      output_high(pin_a2); // hang chuc
      output_d(led_7[hdv]);
      delay_ms(5);
      output_low(pin_a2); // hang chuc
      output_high(pin_a3); // hang don vi
      output_d(led_7[hc]);
      delay_ms(5);     
      output_high(pin_a3); // hang don vi
      output_high(pin_a2); // hang don vi

   }
   
   if(time >= 0 && time < 30)
   {
      timer = 30 - time;
      hc = timer / 10;
      hdv = timer % 10;
      output_low(pin_a0); // hang don vi
      output_high(pin_a1); // hang chuc
      output_d(led_7[hdv]);
      delay_ms(5);
      output_low(pin_a1); // hang chuc
      output_high(pin_a0); // hang don vi
      output_d(led_7[hc]);
      delay_ms(5);
      
     if(time >= 27 && time < 30)
     {
            output_high(pin_b3);
            output_high(pin_b4);
            output_low(pin_b5);
            
            output_high(pin_c5);
            output_high(pin_c7);
            output_low(pin_c6);
      }
      if(time >= 0 && time < 27)
     {
         output_high(pin_c7);
         output_high(pin_c6);
         output_low(pin_c5);
         
         output_high(pin_b3);
         output_high(pin_b4);
         output_low(pin_b5);
     }
 }
   
   if(time >= 30 && time < 60)
   {
      timer = 60 - time;
      hc = timer / 10;
      hdv = timer % 10;
      
      output_high(pin_a1); // hang don vi
      output_low(pin_a0); // hang don vi
      output_d(led_7[hdv]);
      delay_ms(5);
      output_low(pin_a1); // hang chuc
      output_high(pin_a0); // hang don vi
      output_d(led_7[hc]);
      delay_ms(5);
     
      output_high(pin_c5);
      output_high(pin_c6);
      output_low(pin_c7);
      
    if(time >= 30 && time < 57)
     {
         output_high(pin_b4);
         output_high(pin_b5);
         output_low(pin_b3);
      }
      if(time >= 57 && time < 60)
     {
         output_high(pin_b3);
         output_high(pin_b5);
         output_low(pin_b4);
     }
     
   }
}

